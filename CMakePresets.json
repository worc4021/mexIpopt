{
    "version": 6,
    "configurePresets": [
        {
            "name": "config-base",
            "hidden": true,
            "generator": "Ninja",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "BUILD_SHARED_LIBS": false
            }
        },
        {
            "name": "linux-config-base",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "linux-debug-config-base",
            "inherits": "linux-config-base",
            "displayName": "Hidden - linux base",
            "hidden": true,
            "cacheVariables": {
                "IPOPT_PREFIX": "/build/cache/Debug",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "linux-release-config-base",
            "inherits": "linux-config-base",
            "hidden": true,
            "displayName": "Hidden - linux base",
            "cacheVariables": {
                "IPOPT_PREFIX": "/build/cache/Release",
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "linux-gcc-base",
            "inherits": "config-base",
            "displayName": "linux GCC base",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_Fortran_COMPILER": "gfortran"
            },
            "hidden": true
        },
        {
            "name": "linux-gcc-release-config",
            "displayName": "linux GCC Release",
            "inherits": ["linux-gcc-base","linux-release-config-base"]
        },
        {
            "name": "linux-gcc-debug-config",
            "displayName": "linux GCC Debug",
            "inherits": ["linux-gcc-base","linux-debug-config-base"]
        },
        {
            "name": "linux-intel-base",
            "inherits": "config-base",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "icx",
                "CMAKE_CXX_COMPILER": "icpx",
                "CMAKE_Fortran_COMPILER": "ifx"
            },
            "hidden": true
        },
        {
            "name": "linux-intel-debug-config",
            "displayName": "linux Intel Debug",
            "inherits": ["linux-intel-base","linux-debug-config-base"]
        },
        {
            "name": "linux-intel-release-config",
            "displayName": "linux Intel Release",
            "inherits": ["linux-intel-base","linux-release-config-base"]
        }
    ],
    "buildPresets": [
        {
            "name": "linux-build-base",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "linux-gcc-release-build",
            "inherits": "linux-build-base",
            "configurePreset": "linux-gcc-release-config",
            "displayName": "linux GCC Release"
        },
        {
            "name": "linux-gcc-debug-build",
            "inherits": "linux-build-base",
            "configurePreset": "linux-gcc-debug-config",
            "displayName": "linux GCC Debug"
        },
        {
            "name": "linux-intel-debug-build",
            "inherits": "linux-build-base",
            "configurePreset": "linux-intel-debug-config",
            "displayName": "linux Intel Debug"
        },
        {
            "name": "linux-intel-release-build",
            "inherits": "linux-build-base",
            "configurePreset": "linux-intel-release-config",
            "displayName": "linux Intel Release"
        }
    ],
    "testPresets": [
        {
            "name": "test-base",
            "hidden": true,
            "output": {"outputOnFailure": true},
            "execution": {
                "noTestsAction": "error", 
                "stopOnFailure": true
            }
        },
        {
            "name" : "test-linux",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "linux-gcc-release-test",
            "inherits": ["test-base","test-linux"],
            "configurePreset": "linux-gcc-release-config",
            "displayName": "linux GCC Release"
        },
        {
            "name": "linux-gcc-debug-test",
            "inherits": ["test-base","test-linux"],
            "configurePreset": "linux-gcc-debug-config",
            "displayName": "linux GCC Debug"
        },
        {
            "name": "linux-intel-release-test",
            "inherits": ["test-base","test-linux"],
            "configurePreset": "linux-intel-release-config",
            "displayName": "linux Intel Release"
        },
        {
            "name": "linux-intel-debug-test",
            "inherits": ["test-base","test-linux"],
            "configurePreset": "linux-intel-debug-config",
            "displayName": "linux Intel Debug"
        }
    ]
}